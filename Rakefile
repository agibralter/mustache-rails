begin
  require 'jeweler'
  Jeweler::Tasks.new do |gemspec|
    gemspec.name = "mustache-rails"
    gemspec.summary = "Rails support for {{Mustache}}."
    gemspec.description = "Rails support for {{Mustache}}."
    gemspec.email = "aaron.gibralter@gmail.com"
    gemspec.homepage = "http://github.com/agibralter/mustache-rails"
    gemspec.authors = ["Aaron Gibralter"]
    gemspec.add_dependency("mustache", ">= 0.11.0")
    gemspec.add_dependency("rails", "~> 2.3.5")
  end
  Jeweler::GemcutterTasks.new
rescue LoadError
  puts "Jeweler not available. Install it with: gem install jeweler"
end
